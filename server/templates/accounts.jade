extends layout/page

block content
  .main.col-md-10
    button.btn.btn-primary.pull-right(type="button" data-toggle="modal" data-target=".add-account") Добавить счет
    h1 Счета
    .row
      .accounts-list.col-md-12
        hr
        .table-responsive
          table.table.table-striped
            thead
              tr
                td Имя
                td Транзакций
                td Потрачено
                td Заработано
                td Снято
                td Пополнения
                td Итого
            tbody
              each account in accounts
                tr
                  td= account.name
                  td= account.transactions.length
                  td= account.spent
                  td= account.earned
                  td= account.withdrawal
                  td= account.deposits
                  td= account.summary
