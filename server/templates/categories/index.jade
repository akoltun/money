extends ../layout/page

include ../mixins/thead

block append variables
  - var thead = {name: 'Name', transactionsCount: 'Transactionen', spent: 'Verbrachten', earned: 'Verdient', summary: 'Gesamt'}

block content
  .main.col-md-10
    h1= title
    a.btn.btn-default(href="/dashboard/categories/addcategory") Kategorie hinzuf√ºgen
    .row: .categories-list.col-md-12
      hr
      .table-responsive: table.table.table-striped
        +thead(thead)
        tbody#categories-table: each category in categories
          tr
            td: a(href="/dashboard/categories/#{category._id}")= category.name
            td= category.transactionsCount
            td= category.spent
            td= category.earned
            td= category.summary
            td.button-cell
              a.btn.btn-default(href="/dashboard/categories/editcategory/#{category._id}")
                span.glyphicon.glyphicon-edit
              a.btn.btn-default(href="/dashboard/categories/deletecategory/#{category._id}")
                span.glyphicon.glyphicon-minus-sign