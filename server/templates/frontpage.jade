include layout/head
    section.container-fluid: .row: .col-md-12
      a.btn.btn-primary(href='/login') Anmelden
      h2 Registrieren
      form(id="register-form")
        div.form-group
          label(for="email") E-mail
          input.form-control(type="email" name="email" required)
        div.form-group
          label(for="password") Password
          input.form-control(type="password" name="password" required)
        div.form-group: button.btn.btn-primary(type="submit") Registrieren

    script(src='/assets/register.js')