include layout/head
  body
    if flash
      if flash.success
        p.bg-success=flash.message
      if flash.success === false
        p.bg-danger=flash.message
    section.container-fluid: .row
      .col-xs-4
      .col-xs-4: h2 Anmelden
        hr
        form(action="/users" method="POST" role="form")
          .form-group
            label(for="email") E-mail
            input.form-control#email(type="email" name="email"
              required autofocus)
          .form-group
            label(for="password") Password
            input.form-control#password(type="password" name="password"
              required)
          button.btn.btn-primary(type="submit") Anmelden
      .col-xs-4
        br
        a.btn.btn-primary(href='/') Einloggen
  if NODE_ENV === 'development'
    block scripts
      script(src='#{assets.main.js}')